{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "src",
    "outDir": "lib",
    "sourceRoot": "src",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "scripts"]
}
